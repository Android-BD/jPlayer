<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- MAIN LAYOUT -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongListActivity"
    android:background="@color/lightNavyFUI"
    android:animateLayoutChanges="true">
    <!--android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"-->
    
   	<LinearLayout
   	    android:id="@+id/songPathLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:baselineAligned="false">  
         
       <RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
	         <Button
	        	android:id="@+id/searchButton"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="searchButtonClicked"/>
	     	<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
			    android:contentDescription="@string/searchCD"
			    android:src="@drawable/ic_action_search2"/>
	     	<!--<Button
	        	android:id="@+id/songs"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="menuButtonClicked"/>-->
	     	<!--<ImageView
	     	    android:id="@+id/drawerBars"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_centerVertical="true"
			    android:contentDescription="@string/menuCD"
			    android:src="@drawable/ic_drawer2"/>-->
	     	<!--<ImageView
	     	    android:layout_marginLeft="-10dp"
	     	    android:layout_width="wrap_content"
	     	    android:layout_height="wrap_content"
	     	    android:layout_centerVertical="true"
	     	    android:contentDescription="@string/menuCD"
	     	    android:src="@drawable/ic_launcher"
	     	    android:layout_toRightOf="@+id/drawerBars"/>-->
	    </RelativeLayout>
	    <RelativeLayout
	        android:layout_weight="5"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/dockbutton"
	        android:gravity="center">
	        <TextView
	            android:id="@+id/title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/allSongsTitle"
	            android:textColor="@color/docktext"
	            android:textStyle="bold"
	            android:gravity="center"
	            android:singleLine="true"
	            android:textSize="16sp"/>
	        <TextView
	            android:id="@+id/subtitle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/title"
	            android:textColor="@color/docktext"
	            android:gravity="center"
	            android:singleLine="true"
	            android:textSize="14sp"
	            android:visibility="gone"/>
        </RelativeLayout>
	    <RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
	     	<Button
	        	android:id="@+id/nowPlaying"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="backButtonClicked"/>
	     	<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
			    android:contentDescription="@string/nowPlaying"
			    android:src="@drawable/ic_action_next_item"/>
	    </RelativeLayout>
    </LinearLayout>
    
   	<EditText android:id="@+id/searchFilter"
   	    android:background="@drawable/searchfilter"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:hint="@string/search"
   	    android:inputType="textVisiblePassword"
   	    android:layout_below="@+id/songPathLayout"
   	    android:layout_margin="10dp"
   	    android:textSize="14sp"
   	    android:drawableLeft="@drawable/ic_action_search"
   	    android:visibility="gone"/>
   	
    <ListView
        android:id="@android:id/list"
        android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@+id/searchFilter"
		android:layout_above="@+id/dock"
		android:divider="#00000000">
    </ListView>
    
     <ListView
        android:id="@+id/alternateList" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dock"
        android:layout_below="@+id/songPathLayout"
        android:divider="#00000000"
        android:visibility="gone"
        android:background="@color/lightNavyFUI">
     </ListView>
    
    <TextView 
        android:id="@+id/noSongs"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/noSongs"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    
    <LinearLayout 
	    android:id="@+id/dock"
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
	    android:baselineAligned="true">
    
    	<RelativeLayout
        	android:id="@+id/backButtonLayout"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
    		<Button
                android:id="@+id/songs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dockbutton"
                android:onClick="songsButtonClicked"
                android:padding="0dp"/>
            <RelativeLayout
               	android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/songsDockImage"
			   		android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:contentDescription="@string/allSongsTitle"
			    	android:layout_centerHorizontal="true"
			   		android:src="@drawable/ic_action_collection"/>
                <TextView
                	android:layout_width="match_parent"
        	    	android:layout_height="wrap_content"
                	android:text="@string/allSongsTitle"
                	android:textColor="@color/docktext"
                	android:layout_below="@+id/songsDockImage"
                	android:gravity="center"
                	android:singleLine="true"
                	android:textSize="12sp"/>
            		<!--<TextView
                		android:id="@+id/nowPlayingText"
                		android:layout_width="match_parent"
        	    		android:layout_height="wrap_content"
                		android:text="@string/nowPlaying"
                		android:textColor="@color/docktext"
                		android:textStyle="bold"
                		android:gravity="center"
                		android:layout_centerVertical="true"
                		android:singleLine="true"
                		android:textSize="12sp"
                		android:paddingLeft="2dp"
                		/>-->
            		<!--<TextView
                		android:id="@+id/artistText"
                		android:layout_width="match_parent"
        	    		android:layout_height="wrap_content"
                		android:text="@string/artist"
                		android:textColor="@color/docktext"
                		android:layout_below="@+id/nowPlayingText"
                		android:gravity="center"
                		android:singleLine="true"
                		android:textSize="12sp"/>-->
            </RelativeLayout>
    	</RelativeLayout>
    	<RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
            <Button
                android:id="@+id/artists"
              	android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dockbutton"
                android:onClick="artistsButtonClicked"
                android:padding="0dp"/>
            <RelativeLayout
              	android:layout_width="match_parent"
               	android:layout_height="match_parent"
               	android:gravity="center">
               	<ImageView
               	    android:id="@+id/artistsDockImage"
			  	 	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:contentDescription="@string/artists"
			   		android:layout_centerHorizontal="true"
			  		android:src="@drawable/ic_action_group"/>
               	<TextView
               		android:layout_width="match_parent"
        	   		android:layout_height="wrap_content"
               		android:text="@string/artists"
               		android:textColor="@color/docktext"
               		android:layout_below="@+id/artistsDockImage"
               		android:gravity="center"
               		android:singleLine="true"
               		android:textSize="12sp"/>
            </RelativeLayout>
	    	<!--<Button
	        	android:id="@+id/rewindButton"
	        	android:layout_width="match_parent"
	       	 	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="rewindButtonClicked"/>
	    	<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
        		android:layout_centerVertical="true"
			    android:contentDescription="@string/previousCD"
			    android:src="@drawable/ic_action_previous"/>-->
	    </RelativeLayout>
	    <RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
            <Button
                android:id="@+id/settings"
              	android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dockbutton"
                android:onClick="settingsButtonClicked"
                android:padding="0dp"/>
            <RelativeLayout
              	android:layout_width="match_parent"
               	android:layout_height="match_parent"
               	android:gravity="center">
               	<ImageView
               	    android:id="@+id/settingsDockImage"
			  	 	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:contentDescription="@string/settings"
			   		android:layout_centerHorizontal="true"
			  		android:src="@drawable/ic_action_settings"/>
               	<TextView
               		android:layout_width="match_parent"
        	   		android:layout_height="wrap_content"
               		android:text="@string/settings"
               		android:textColor="@color/docktext"
               		android:layout_below="@+id/settingsDockImage"
               		android:gravity="center"
               		android:singleLine="true"
               		android:textSize="12sp"/>
            </RelativeLayout>
	     	<!--<Button
	       	 	android:id="@+id/playButton"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="playButtonClicked"/>
	     	<ImageView
	     	    android:id="@+id/playButtonImage"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
        		android:layout_centerVertical="true"
			    android:contentDescription="@string/playCD"
			    android:src="@drawable/ic_action_play"/>-->
	     </RelativeLayout>
	     <RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
            <Button
                android:id="@+id/help"
              	android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dockbutton"
                android:onClick="helpButtonClicked"
                android:padding="0dp"/>
            <RelativeLayout
              	android:layout_width="match_parent"
               	android:layout_height="match_parent"
               	android:gravity="center">
               	<ImageView
               	    android:id="@+id/helpDockImage"
			  	 	android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:contentDescription="@string/help"
			   		android:layout_centerHorizontal="true"
			  		android:src="@drawable/ic_action_help"/>
               	<TextView
               		android:layout_width="match_parent"
        	   		android:layout_height="wrap_content"
               		android:text="@string/help"
               		android:textColor="@color/docktext"
               		android:layout_below="@+id/helpDockImage"
               		android:gravity="center"
               		android:singleLine="true"
               		android:textSize="12sp"/>
            </RelativeLayout>
	     	<!--<Button
	        	android:id="@+id/forwardButton"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="forwardButtonClicked"/>
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
        		android:layout_centerVertical="true"
			    android:contentDescription="@string/nextCD"
			    android:src="@drawable/ic_action_next"/>-->
	     </RelativeLayout>
    
	</LinearLayout>
    	
</RelativeLayout>

