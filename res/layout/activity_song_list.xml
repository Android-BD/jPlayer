<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongListActivity"
    android:background="@color/lightNavyFUI" >

    <Button
        android:id="@+id/songPath"
       	android:layout_width="match_parent"
       	android:layout_height="60dp"
       	android:background="@drawable/dockbutton"
		android:textColor="@color/docktext"
		android:text="@string/songPath"
		android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_action_collection"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:onClick="songPathClicked"
        android:textSize="16sp"/>
    
    <ListView
        android:id="@+id/android:list"
        android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@+id/songPath"
		android:layout_above="@+id/dock"
		android:divider="#00000000">
    </ListView>
    
    <TextView 
        android:id="@+id/noSongs"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/noSongs"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    
    <LinearLayout 
	    android:id="@+id/dock"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
	    android:baselineAligned="true">
    
    	<RelativeLayout
        	android:id="@+id/backButtonLayout"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3">
    		<Button
	        	android:id="@+id/backButton"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="backButtonClicked"
	        	android:textColor="@color/docktext"
	        	android:text="now playing song info goes here"/>
    		<!--<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
        		android:layout_centerVertical="true"
			    android:contentDescription="@string/backCD"
			    android:src="@drawable/ic_action_undo"/>-->
    	</RelativeLayout>
    	<RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
	    	<Button
	        	android:id="@+id/rewindButton"
	        	android:layout_width="match_parent"
	       	 	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="rewindButtonClicked"/>
	    	<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
        		android:layout_centerVertical="true"
			    android:contentDescription="@string/previousCD"
			    android:src="@drawable/ic_action_previous"/>
	    </RelativeLayout>
	    <RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
	     	<Button
	       	 	android:id="@+id/playButton"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="playButtonClicked"/>
	     	<ImageView
	     	    android:id="@+id/playButtonImage"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
        		android:layout_centerVertical="true"
			    android:contentDescription="@string/playCD"
			    android:src="@drawable/ic_action_play"/>
	     </RelativeLayout>
	     <RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
	     	<Button
	        	android:id="@+id/forwardButton"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="forwardButtonClicked"/>
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
        		android:layout_centerVertical="true"
			    android:contentDescription="@string/nextCD"
			    android:src="@drawable/ic_action_next"/>
	     </RelativeLayout>
    
	</LinearLayout>
    	
</RelativeLayout>
