<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/lightNavyFUI">
		
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:baselineAligned="false">  
       <RelativeLayout
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent">
	     	<Button
	        	android:id="@+id/songs"
	        	android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:background="@drawable/dockbutton"
	        	android:onClick="songsButtonClicked"/>
	     	<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
				android:layout_centerVertical="true"
			    android:contentDescription="@string/goBackCD"
			    android:src="@drawable/ic_action_previous_item"/>
	    </RelativeLayout>
       <TextView
            android:gravity="center"
            android:layout_width="0dp"
      	   	android:layout_height="match_parent"
      	    android:layout_weight="5"
            android:text="@string/about"
            android:textColor="@color/docktext"
            android:background="@drawable/dockbutton"
            android:textStyle="bold"
            android:singleLine="true"
            android:textSize="16sp"/>
     	<ImageView
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:contentDescription="@string/about"
		    android:background="@drawable/dockbutton"/> 
    </LinearLayout>
    
   	<ImageView
   	    android:id="@+id/app_icon"
   	    android:contentDescription="@string/app_name"
   	    android:layout_centerHorizontal="true"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_above="@+id/app_name"
   	    android:src="@drawable/ic_launcherapp"/>
   
    <TextView
        android:id="@+id/app_name"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/cloudFUI"/>
    
    <TextView
        android:id="@+id/app_version"
        android:layout_below="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_version"
        android:textSize="14sp"
        android:textColor="@color/cloudFUI"/>
    
    <TextView android:id="@+id/app_developer"
        android:layout_below="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_developer"
        android:textSize="14sp"
        android:textColor="@color/cloudFUI"/>
       
</RelativeLayout>
