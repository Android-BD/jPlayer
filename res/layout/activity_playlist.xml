<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistActivity" 
    android:background="@color/lightNavyFUI">

   <Button
        android:id="@+id/title"
       	android:layout_width="match_parent"
       	android:layout_height="60dp"
       	android:background="@drawable/dockbutton"
		android:textColor="@color/docktext"
		android:text="@string/title"
		android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"/>
   
   <Button
        android:id="@+id/newPlaylist"
       	android:layout_width="match_parent"
       	android:layout_height="60dp"
       	android:background="@drawable/songitembackground"
		android:textColor="@color/docktext"
		android:text="@string/newPlaylist"
		android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="14sp"
        android:gravity="left|center_vertical"
        android:layout_below="@+id/title"/>
   
    <ListView
        android:id="@+id/android:list"
        android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@+id/newPlaylist"
		android:divider="#00000000">
    </ListView>

</RelativeLayout>
